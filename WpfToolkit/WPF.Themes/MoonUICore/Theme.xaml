    <Style TargetType="{x:Type Button}">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="Height" Value="36" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition GeneratedDuration="0" />
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="rectangle"
                                                        Storyboard.TargetProperty="Fill.GradientStops[1].Color"
                                                        To="{StaticResource Fill_pressed_light}"
                                                        d:IsOptimized="True" />
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="rectangle"
                                                        Storyboard.TargetProperty="Fill.GradientStops[0].Color"
                                                        To="{StaticResource Fill_pressed_dark}"
                                                        d:IsOptimized="True" />
                                        <DoubleAnimation Duration="0"
                                                         Storyboard.TargetName="rectangle"
                                                         Storyboard.TargetProperty="(Shape.Fill).(GradientBrush.GradientStops)[1].(GradientStop.Offset)"
                                                         To="0.239"
                                                         d:IsOptimized="True" />
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="rectangle" Storyboard.TargetProperty="(Shape.Stroke)">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Null}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="textBlock"
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).Color"
                                                        To="White"
                                                        d:IsOptimized="True" />
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="textBlock1"
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).Color"
                                                        To="#FF414141"
                                                        d:IsOptimized="True" />

                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Disabled">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="rectangle"
                                                        Storyboard.TargetProperty="Fill.GradientStops[0].Color"
                                                        To="{StaticResource Fill_normal_top}"
                                                        d:IsOptimized="True" />
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="rectangle"
                                                        Storyboard.TargetProperty="Fill.GradientStops[1].Color"
                                                        To="{StaticResource Fill_normal_bottom}"
                                                        d:IsOptimized="True" />
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="textBlock"
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).Color"
                                                        To="#5B717171"
                                                        d:IsOptimized="True" />
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="textBlock1"
                                                        Storyboard.TargetProperty="(TextBlock.Foreground).Color"
                                                        To="#AFFFFFFF"
                                                        d:IsOptimized="True" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="rectangle"
                                                        Storyboard.TargetProperty="Fill.GradientStops[1].Color"
                                                        To="{StaticResource Fill_over_top}"
                                                        d:IsOptimized="True" />
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="rectangle"
                                                        Storyboard.TargetProperty="Fill.GradientStops[0].Color"
                                                        To="{StaticResource Fill_over_bottom}"
                                                        d:IsOptimized="True" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="rectangle"
                                                        Storyboard.TargetProperty="Fill.GradientStops[0].Color"
                                                        To="{StaticResource Fill_normal_top}"
                                                        d:IsOptimized="True" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="MouseOver">
                                    <Storyboard>
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="rectangle"
                                                        Storyboard.TargetProperty="Fill.GradientStops[1].Color"
                                                        To="{StaticResource Fill_over_top}"
                                                        d:IsOptimized="True" />
                                        <ColorAnimation Duration="0"
                                                        Storyboard.TargetName="rectangle"
                                                        Storyboard.TargetProperty="Fill.GradientStops[0].Color"
                                                        To="{StaticResource Fill_over_bottom}"
                                                        d:IsOptimized="True" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="FocusStates">
                                <VisualState x:Name="Focused" />
                                <VisualState x:Name="PointerFocused" />
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Rectangle Margin="0,1,0,-1"
                                   Fill="{StaticResource Shadow_second_color}"
                                   RadiusX="5"
                                   RadiusY="5"
                                   d:IsHidden="True" />
                        <Rectangle Margin="1,0"
                                   Fill="{StaticResource Shadow_first_color}"
                                   RadiusX="4"
                                   RadiusY="4" />
                        <Rectangle x:Name="rectangle"
                                   Margin="1,0,1,1"
                                   RadiusX="2"
                                   RadiusY="2">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="{StaticResource Fill_normal_top}" />
                                    <GradientStop Offset="1" Color="{StaticResource Fill_normal_bottom}" />
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                            <Rectangle.Stroke>
                                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                    <GradientStop Color="{StaticResource BorderStroke_top}" />
                                    <GradientStop Offset="1" Color="{StaticResource BorderStroke_bottom}" />
                                </LinearGradientBrush>
                            </Rectangle.Stroke>
                        </Rectangle>


                        <TextBlock x:Name="textBlock1"
                                   Margin="0,0.5,0,-1"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Center"
                                   FontFamily="{TemplateBinding FontFamily}"
                                   FontSize="{TemplateBinding FontSize}"
                                   FontStyle="{TemplateBinding FontStyle}"
                                   FontWeight="{TemplateBinding FontWeight}"
                                   Foreground="White"
                                   Text="{TemplateBinding Content}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap" />
                        <TextBlock x:Name="textBlock"
                                   Margin="0"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Center"
                                   FontFamily="{TemplateBinding FontFamily}"
                                   FontSize="{TemplateBinding FontSize}"
                                   FontStyle="{TemplateBinding FontStyle}"
                                   FontWeight="{TemplateBinding FontWeight}"
                                   Foreground="{StaticResource Text_dark_}"
                                   Padding="{TemplateBinding Padding}"
                                   Text="{TemplateBinding Content}"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap" />
                        <ContentPresenter x:Name="ContentPresnt"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"
                                          TextBlock.Foreground="Transparent"
                                          TextElement.Foreground="Transparent" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

